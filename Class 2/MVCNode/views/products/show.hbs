<h1>Product</h1>
<table>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th></th>
    </tr>
    <tr>
        <td>{{product.name}}</td>
        <td>{{product.price}}</td>
        <td>{{product.description}}</td>
        <td><a href="/products/{{product.id}}/edit/">Edit</a></td>
        <td>
          <form method="POST" action="/products/{{ product.id }}?_method=DELETE">
              <input type="submit" value="Delete">
          </form>
        </td>
    </tr>
</table>