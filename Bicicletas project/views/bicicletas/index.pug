extends ../layout

block content 
  h1 Listado bicicletas
  table.table 
    thead 
      tr 
        th Code
        th Color
        th Modelo
        th Ubicación 
    tbody 
      each bicicleta in bicicletas 
        tr 
          td= bicicleta.code
          td= bicicleta.color
          td= bicicleta.modelo
          td= bicicleta.ubicacion
          td
            form.inline(method='post' action='/bicicletas/'+bicicleta.code+'/delete')
              input(type="hidden" name='id' value=bicicleta.code)
              button.link-button(type='submit' name='submit_param' value='submit_value' class='btn')
                = 'Eliminar'
          td 
            a(href='/bicicletas/'+bicicleta.code+'/update') Editar 

  a(href="/") Home
  br
  a(href="/bicicletas/create") Añadir bicicleta