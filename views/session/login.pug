extends ../layout

block content
  a(href="/") Volver
  br
  h1 Login 
  form(action="/login" method="POST")
    table.table 
      tr 
        td
          label(for="email") Email:
        td 
          input#email(type="email", name="email" placeholdr="Email")
      tr 
        td 
          label(for="pwd") Password:
        td 
          input#pwd(type="password", name="password")
      tr 
        td 
        td 
          input.btn(type="submit" value="Login")
          br
          if errors
            small#nombreHelp.text-danger= errors.message
